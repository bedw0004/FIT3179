{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Share of electricity production from solar",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
    "url": "https://raw.githubusercontent.com/bedw0004/FIT3179/main/Data%20Vis%202/data/share-elec-solar.csv"
    },
    "params": [
    {
      "name": "Year_select",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 1985,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    }],  
    "layer":[
    {
      "transform": [
        {
            "lookup": "Code",
            "from": {
                "data": {
                "url": "https://raw.githubusercontent.com/bedw0004/FIT3179/main/Data%20Vis%202/data/ne_110m_admin_0_countries.topojson",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "key": "properties.GU_A3"
            },
            "as": "geo"
        },
        {"calculate": "'Data is not available in ' + datum.Year", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "#f1ece9"},
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
        "transform": [
            {"filter": "datum.Year == Year_select"},
            {
                "lookup": "Code",
                "from": {
                    "data": {
                    "url": "https://raw.githubusercontent.com/bedw0004/FIT3179/main/Data%20Vis%202/data/ne_110m_admin_0_countries.topojson",
                    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                    },
                    "key": "properties.GU_A3",
                    "fields": ["geometry"]
                },
                "as": "geo"
            }
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
            "shape": {
              "field": "geo",
              "type": "geojson"
            },
            "color": {
                "field": "solar_perc",
                "type": "quantitative",
                "scale": {
                    "type": "threshold",
                    "domain": [0, 2, 5, 10],
                    "range": ["#ffffff", "#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
                }
            },
            "tooltip": [
                {"field": "geo.properties.NAME", "type": "nominal", "title": "Country"},
                {"field": "geo.properties.GU_A3", "type": "nominal", "title": "Code"},
                {"field": "solar_perc", "type": "quantitative", "title": "Percentage of electricity from solar", "format": ".2f"},
                {"field": "Year", "type": "quantitative"}
            ]
        }
    }
]
}
