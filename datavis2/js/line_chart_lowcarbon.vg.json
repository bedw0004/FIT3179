{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/bedw0004/FIT3179/main/datavis2/data/share_elec_low_carbon_filtered.csv"},
  "width": "container",
  "height": "container",

  "transform": [
    {"filter": "datum.low_carbon_perc != 'NA'"},
    {"filter": {"param": "country_selection"}},
    {
      "calculate": "datum.low_carbon_perc/100",
      "as": "low_carbon_prop"
    }
  ],

  "encoding": {
    "x": {"field": "Year", "type": "temporal", "title": "Year"},
    "y": {
      "field": "low_carbon_prop", 
      "type": "quantitative", 
      "title": "Energy from low carbon sources",
      "axis": {"format": ".0%"},
      "scale": {"domain": [0, 1]}
    },
    
    "color": {
      "field": "Entity",
      "legend": {
        "title": "Click country name to highlight üñ±Ô∏è", 
        "symbolSize": {
          "expr": "datum.label=='Norway'?0:100 || datum.label=='Norway'?0:100"
        },
        "labelExpr": "datum.label == 'Norway' ? null : datum.label || datum.label == 'Norway' ? null : datum.label",
        "titleFontSize": 16,
        "titleLimit": 270,
        "orient": "top"
      },
      "scale": {
        "domain": [
          "Norway",
          "France",
          "Greenland",
          "United Kingdom",
          "Vietnam",
          "World",
          "Australia",
          "India",
          "South Africa"
        ],
        "range": [
          "#82B5EF",
          "#66D68E",
          "#B893CC",
          "#FF9999",
          "#A599B5",
          "#ff9cee",
          "#A67E51",
          "#6E6D6C",
          "#E4B886"
        ]
      }
    },
    "opacity": {
      "condition": [
        {
          "param": "click",
          "value": 1
        }
      ],
      "value": 0.2
    }
  },

  "layer": [
    {
      "mark": {"type": "line", "point": true},
      "encoding": {
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"}, 
          {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
          {"field": "low_carbon_prop", "title": "Energy from low carbon sources", "type": "quantitative", "format": ",.2%"}
        ]
      }
    }, 
    {
      "encoding": {
        "x": {"aggregate": "max", "field": "Year"},
        "y": {"aggregate": {"argmax": "Year"}, "field": "low_carbon_prop"}
      },
      "layer": [
        {
          "mark": {"type": "circle"}
        }, 
        {
          "params": [
            {
              "name": "click",
              "value": null,
              "select": {
                "type": "point",
                "fields": ["Entity"],
                "on": "click"
              }
            },
            {
              "name": "country_selection",
              "value": null,
              "bind": {
                "input": "select",
                "options": [
                  null,
                  "World",
                  "Australia",
                  "Greenland",
                  "France",
                  "India",
                  "Norway",
                  "South Africa",
                  "United Kingdom",
                  "Vietnam"
                ],
                "labels": [
                  "Show all",
                  "World",
                  "Australia",
                  "Greenland",
                  "France",
                  "India",
                  "Norway",
                  "South Africa",
                  "United Kingdom",
                  "Vietnam"
                ],
                "name": "Select country: "
              },
              "select": {"type": "point", "fields": ["Entity"]}
            }
          ],
          "mark": {"type": "text", "align": "left", "dx": 6, "fontWeight": "bold", "cursor": "pointer"},
          "encoding": {"text": {"field":"Entity", "type": "nominal"}}
          }
      ]
    }
  ],
  "config": {
      "background": "transparent",
      "font": "Roboto",
      "view": {"stroke": null},
      "axis": {"grid": false, "labelFontSize": 12, "titleFontSize": 13},
      "legend": {
        "titleFontSize": 14,
        "labelFontSize": 12,
        "layout": {"top": {"anchor": "end", "center": true, "offset": 2}}
      },
      
      "style": {
        "cell": {
          "stroke": "transparent"
        }
      }
  }
}
