{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Share of electricity production from solar",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
  "url": "https://raw.githubusercontent.com/bedw0004/FIT3179/main/datavis2/data/share-elec-solar.csv"
  },
  "params": [
  {
    "name": "Year_select",
    "value": 2021,
    "bind": {
      "input": "range",
      "min": 1985,
      "max": 2022,
      "step": 1,
      "name": "Year: "
    }
  }],  
  "layer":[
  {
      "transform": [
          {"filter": "datum.Year == Year_select"},
          {
              "lookup": "Code",
              "from": {
                  "data": {
                  "url": "https://raw.githubusercontent.com/bedw0004/FIT3179/main/datavis2/data/ne_110m_admin_0_countries.topojson",
                  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                  },
                  "key": "properties.ISO_A3_EH"
              },
              "as": "geo"
          }
      ],
      "mark": {"type": "geoshape", "stroke": "#f1ece9", "strokeWidth": "0.4",},
      "encoding": {
          "shape": {
            "field": "geo",
            "type": "geojson"
          },
          "color": {
              "field": "solar_perc",
              "type": "quantitative",
              "title": "Percentage",
              "scale": {
                  "type": "threshold",
                  "domain": [0, 2, 5, 10],
                  "range": ["#ffffff", "#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
              }
          },
          "tooltip": [
              {"field": "geo.properties.NAME", "type": "nominal", "title": "Country"},
              {"field": "geo.properties.ISO_A3_EH", "type": "nominal", "title": "Code"},
              {"field": "solar_perc", "type": "quantitative", "title": "Percentage of electricity from solar", "format": ".2f"},
              {"field": "Year", "type": "quantitative"}
          ]
      }
  }
]
}
