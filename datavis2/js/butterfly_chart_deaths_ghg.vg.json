{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": { "url": "https://raw.githubusercontent.com/bedw0004/FIT3179/main/datavis2/data/death_ghg_energy_source.csv"},
    "spacing": 3,
    "hconcat": [
      {
        "height": {"step": 50},
        "transform": [{
          "filter": {"field": "metric", "equal": "deaths_per_twh"}
        }],
        "title": {"text": "Deaths per TWh of electricity", "align": "right"},
        "layer": [
          {
            "mark": "bar"
          },
          {
            "mark": {
              "type": "text",
              "align": "right",
              "dx": -5
            },
            "encoding": {
              "text": {
                "field": "value", 
                "type": "quantitative",
                "format": ".1f"
              }
            }
          }
        ],
        "encoding": {
          "y": {
            "field": "source", 
            "axis": null, 
            "sort": {"op": "sum", "field": "value", "order": "descending"}
          },
          "x": {
            "aggregate": "sum", 
            "field": "value",
            "axis": null,
            "sort": "descending"
          },
          "color": {
            "field": "source",
            "scale": {"scheme": "set2"},
            "legend": null
          }
        }
      }, 
      {
        "width": 50,
        "height": {"step": 50},
        "view": {"stroke": null},
        "mark": {
          "type": "text",
          "align": "center",
          "fontSize": 14,
          "fontWeight": "bold"
        },
        "encoding": {
          "y": {
            "field": "source", 
            "type": "nominal", 
            "axis": null, 
            "sort": {"op": "sum", "field": "value", "order": "descending"}
          },
          "text": {"field": "source", "type": "nominal"},
          "color": {
            "field": "source",
            "scale": {"scheme": "set2"},
            "legend": null
          }
        }
      }, 
      {
        "height": {"step": 50},
        "transform": [{
          "filter": {"field": "metric", "equal": "ghg_emissions_tonnes_per_gwh"}
        }],
        "title": {"text": "Greenhouse gas emissions (tonnes per GWh)", "align": "left"},
        "layer": [
          {
            "mark": "bar"
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "dx": 5
            },
            "encoding": {
              "text": {
                "field": "value", 
                "type": "quantitative",
                "format": ".0f"
              }
            }
          }
        ],
        "encoding": {
          "y": {
            "field": "source", 
            "title": null,
            "axis": null, 
            "sort": {"op": "sum", "field": "value", "order": "descending"}
          },
          "x": {
            "aggregate": "sum", "field": "value",
            "axis": null
          },
          "color": {
            "field": "source",
            "legend": null
          }
        }
      }
    ],
    "config": {
        "background": "transparent",
        "font": "Roboto",
        "view": {"stroke": null},
        "axis": {"grid": false},
        "legend": {
          "titleFontSize": 14,
          "labelFontSize": 12
        },
        "style": {
          "cell": {
            "stroke": "transparent"
          }
        }
    }
  }
  